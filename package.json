{
  "name": "@nim-ai/betterprompt",
  "version": "0.1.1",
  "description": "Semantically merge and upgrade prompts or text.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    }
  },
  "bin": {
    "betterprompt": "./dist/cli.js"
  },
  "files": [
    "dist/*.js",
    "dist/*.cjs",
    "dist/*.d.ts",
    "dist/*.d.cts",
    "models",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:docs": "typedoc",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "bench": "tsx benchmarks/run.ts",
    "prepublishOnly": "npm run build",
    "demo:setup": "mkdir -p demo/public/models && cp -r models/m2v-base-output demo/public/models/",
    "demo:dev": "npm run demo:setup && vite demo",
    "demo:build": "npm run demo:setup && vite build demo",
    "demo:preview": "vite preview demo"
  },
  "keywords": [
    "merge",
    "diff",
    "prompt",
    "text",
    "semantic",
    "nlp",
    "patch",
    "upgrade"
  ],
  "author": "nim-ai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nim-ai/betterprompt.git"
  },
  "bugs": {
    "url": "https://github.com/nim-ai/betterprompt/issues"
  },
  "homepage": "https://nim-ai.github.io/betterprompt",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.16.0",
    "prettier": "^3.4.0",
    "tsup": "^8.3.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.27.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.0",
    "onnxruntime-node": "^1.23.2",
    "onnxruntime-web": "^1.23.2"
  }
}
